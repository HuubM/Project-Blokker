@model ProjectBlokker.ViewModels.ArtikelViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Artikel</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="artikel.ArtikelID" />
        <div class="form-group">
            <label asp-for="artikel.CategorieID" class="control-label col-md-2">Categorie</label>
            <div class="col-md-10">
               
                
                @Html.DropDownListFor(model => model.artikel.CategorieID,
                new SelectList(Model.categorie, "CategorieID", "Naam"), "Selecteer Categorie", new { @class = "form-control" })


            </div>
        </div>
        <div class="form-group">
            <label asp-for="artikel.Naam" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="artikel.Naam" class="form-control" />
                <span asp-validation-for="artikel.Naam" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

