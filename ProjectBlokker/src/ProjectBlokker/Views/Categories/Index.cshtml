@model IEnumerable<ProjectBlokker.Models.Categorie>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategorieID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategorieID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CategorieID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="bottom-space-small">
    <a href="~/Account/Login/" class="btn btn-pink text-bold btn-width-25" role="button"> Terug Naar Overzicht </a>
</div>